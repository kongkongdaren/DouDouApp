<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_video_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/btn_header_back_sec"
            />
        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="@string/vediohinttext"
            android:drawableLeft="@mipmap/search_suggest"
            android:drawablePadding="2dp"
            android:layout_gravity="center_vertical"
            android:focusable="false"
            android:background="@android:drawable/editbox_background"
            />

        <ImageView
            android:id="@+id/iv_all"
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_weight="1.00"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:src="@mipmap/bar_category_foreground"/>
    </LinearLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <android.support.v4.view.ViewPager
                android:id="@+id/vp_video_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/ll_container_video_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                />
        </FrameLayout>
    <com.yjlw.ddms.homeentity.views.HomeTitleItemView
        android:id="@+id/httv_hot"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/iv_hot_photo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_main_logo"
            />
        <ImageView
            android:id="@+id/iv_hot_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_video_play_small"
            android:layout_gravity="center"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <com.yjlw.ddms.fristentity.views.MySelfCircleView
            android:id="@+id/iv_hot_circle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_hot_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_name_hot"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:text="@string/hotname"
        android:gravity="center_vertical"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/tv_hot_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxLines="2"
        android:maxEms="50"
        android:ellipsize="end"
        android:textSize="15sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:id="@+id/tv_hot_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/half_black"
            android:text="@string/time"/>
        <ImageView
            android:layout_toLeftOf="@+id/tv_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/zan_selector"/>
        <TextView
            android:id="@+id/tv_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/half_black"
            android:layout_toLeftOf="@+id/iv_hot_comment"
            android:layout_marginRight="20dp"
            android:text="@string/zan"
            />
        <ImageView
            android:id="@+id/iv_hot_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_hot_comment"
            android:src="@mipmap/ico_auxiliary_comment"/>
        <TextView
            android:id="@+id/tv_hot_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/comment"
            />
    </RelativeLayout>
        <com.yjlw.ddms.homeentity.views.HomeTitleItemView
            android:id="@+id/htiv_new"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <ImageView
                android:id="@+id/iv_new_photo"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_main_logo"
                />
            <ImageView
                android:id="@+id/iv_new_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_video_play_small"
                android:layout_gravity="center"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <com.yjlw.ddms.fristentity.views.MySelfCircleView
                android:id="@+id/iv_new_circle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_new_user"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_new_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:text="@string/hotname"
            android:gravity="center_vertical"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_new_content"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLines="2"
            android:maxEms="50"
            android:ellipsize="end"
            android:textSize="15sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <TextView
                android:id="@+id/tv_new_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/half_black"
                android:text="@string/time"/>
            <ImageView
                android:layout_toLeftOf="@+id/tv_new_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/zan_selector"/>
            <TextView
                android:id="@+id/tv_new_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/half_black"
                android:layout_toLeftOf="@+id/iv_new_comment"
                android:layout_marginRight="20dp"
                />
            <ImageView
                android:id="@+id/iv_new_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_new_comment"
                android:src="@mipmap/ico_auxiliary_comment"/>
            <TextView
                android:id="@+id/tv_new_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <com.yjlw.ddms.homeentity.views.HomeTitleItemView
            android:id="@+id/htiv_greens"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <ImageView
                android:id="@+id/iv_greens_photo"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_main_logo"
                />
            <ImageView
                android:id="@+id/iv_greens_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_video_play_small"
                android:layout_gravity="center"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <com.yjlw.ddms.fristentity.views.MySelfCircleView
                android:id="@+id/iv_greens_circle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_greens_user"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_greens_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:text="@string/hotname"
            android:gravity="center_vertical"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_greens_content"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLines="2"
            android:maxEms="50"
            android:ellipsize="end"
            android:textSize="15sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <TextView
                android:id="@+id/tv_greens_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/half_black"
                android:text="@string/time"/>
            <ImageView
                android:layout_toLeftOf="@+id/tv_greens_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/zan_selector"/>
            <TextView
                android:id="@+id/tv_greens_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/half_black"
                android:layout_toLeftOf="@+id/iv_greens_comment"
                android:layout_marginRight="20dp"
                />
            <ImageView
                android:id="@+id/iv_greens_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_greens_comment"
                android:src="@mipmap/ico_auxiliary_comment"/>
            <TextView
                android:id="@+id/tv_greens_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <com.yjlw.ddms.homeentity.views.HomeTitleItemView
            android:id="@+id/htiv_category"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/iv_category_photo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_main_logo"
            />
        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textColor="@color/half_black"
            android:layout_marginLeft="20dp"
            />
        <com.yjlw.ddms.homeentity.views.HomeTitleItemView
            android:id="@+id/htiv_interest"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <com.yjlw.ddms.fristentity.views.MyListView
            android:id="@+id/lv_interest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
