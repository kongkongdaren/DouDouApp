<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <com.yjlw.ddms.fristentity.views.MySelfCircleView
            android:id="@+id/mycirview_storelogourl"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_store_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/abc_search_url_text_selected"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_store_title"
                />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <ImageView
            android:id="@+id/iv_coverUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/iv_coverUrl"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_Title"
                style="@style/shoppingTitle"
                android:textSize="16sp"

                />

            <TextView
                android:id="@+id/tv_subTitle"
                style="@style/shoppingTitle"
                android:textSize="14sp"
                />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_deal_price"
            style="@style/scrollShopping"

            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_price"
            style="@style/Price"
            android:layout_toRightOf="@+id/tv_deal_price"
            />

        <TextView
            android:id="@+id/tv_labels_Activity_price"
            style="@style/openurl"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_price"
            android:alpha="0.8"
            android:background="@drawable/shape_point_item_price"
            android:gravity="center_horizontal"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_labels_exp"
            style="@style/openurl"
            android:layout_toRightOf="@+id/tv_labels_Activity_price"
            android:alpha="0.8"
            android:background="@drawable/shape_point_item_price"
            android:gravity="center_horizontal"
            android:visibility="invisible"
            />

        <ImageButton
            android:id="@+id/btn_openurl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:src="@mipmap/btn_header_shoppingcart_gray"

            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/bright_gray"/>
</LinearLayout>