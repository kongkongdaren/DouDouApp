<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/iv_lifeitem_photo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_main_logo"
            />
        <ImageView
            android:id="@+id/iv_lifeitem_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_video_play_small"
            android:layout_gravity="center"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <com.yjlw.ddms.fristentity.views.MySelfCircleView
            android:id="@+id/iv_lifeitem_circle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_lifeitem_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_lifeitem_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:text="@string/hotname"
        android:gravity="center_vertical"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/tv_lifeitem_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxLines="2"
        android:maxEms="50"
        android:ellipsize="end"
        android:textSize="15sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:id="@+id/tv_lifeitem_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/half_black"
            android:text="2015-3-24 20:50"/>
        <ImageView
            android:layout_toLeftOf="@+id/tv_lifeitem_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/zan_selector"/>
        <TextView
            android:id="@+id/tv_lifeitem_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/half_black"
            android:layout_toLeftOf="@+id/iv_lifeitem_comment"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:id="@+id/iv_lifeitem_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_lifeitem_comment"
            android:src="@mipmap/ico_auxiliary_comment"/>
        <TextView
            android:id="@+id/tv_lifeitem_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</LinearLayout>