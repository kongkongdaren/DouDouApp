<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/iv_list_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/btn_header_back"/>
    <ImageView
        android:id="@+id/iv_list_share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/btn_share_white"
        android:layout_gravity="right"/>

    <ImageView
        android:id="@+id/lv_list_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_main_logo"/>
</FrameLayout>
    <TextView
        android:id="@+id/tv_list_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/listtitle"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/bright_gray">
     <com.yjlw.ddms.fristentity.views.MySelfCircleView
         android:id="@+id/mfcv_id"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_marginLeft="40dp"
         android:src="@mipmap/ic_main_logo"/>
        <TextView
            android:id="@+id/tv_list_user"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/mfcv_id"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/meishi"
            android:textColor="@color/common_black"
             />
        <TextView
            android:id="@+id/tv_list_usercontent"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_list_user"
            android:layout_toRightOf="@+id/mfcv_id"
            android:layout_marginLeft="20dp"
            android:text="@string/meishi"
            android:textColor="@color/half_black"
            />
    </RelativeLayout>
    <WebView
        android:id="@+id/wb_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>