<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_video_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/btn_header_back_sec"
            />
        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="@string/vediohinttext"
            android:drawableLeft="@mipmap/search_suggest"
            android:drawablePadding="2dp"
            android:layout_gravity="center_vertical"
            android:focusable="false"
            android:background="@android:drawable/editbox_background"
            />
        <ImageView
            android:id="@+id/iv_all"
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_weight="1.00"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/bar_category_foreground"/>
        </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView
        android:id="@+id/lv_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <ProgressBar
            android:id="@+id/pb_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>
</LinearLayout>