<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_real_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/squareen_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bright_gray">
        <ImageView
            android:id="@+id/iv_squareen_return_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/btn_header_back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:text="家常菜"/>
        <ImageView
            android:id="@+id/iv_squareen_action_search_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/action_search"/>
        <ImageView
            android:id="@+id/iv_squareen_btn_header_edit_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/btn_header_edit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_squareen_jiachangcai_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_squareen_jiachangcai_username_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家常菜"/>
            <TextView
                android:id="@+id/tv_squareen_jiachangcai_content_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="家常味道，幸福滋味"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ico_order_no"/>
                <TextView
                    android:id="@+id/tv_squareen_jiachangcai_count_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="3221"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/ico_people_gray"/>
                <TextView
                    android:id="@+id/tv_squareen_jiachangcai_people_count_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="1210"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@mipmap/freight_settings_add"/>

    </LinearLayout>
    <RadioGroup
        android:id="@+id/rg_jiachangcai_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_jiachangcai_all_id"
            style="@style/myselfStyle"
            android:checked="true"
            android:paddingLeft="45dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="全部" />

        <RadioButton
            android:id="@+id/rb_jiachangcai_new_id"
            style="@style/myselfStyle"
            android:paddingLeft="45dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="最新" />

        <RadioButton
            android:id="@+id/rb_jiachangcai_jinghua_id"
            style="@style/myselfStyle"
            android:paddingLeft="45dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="精华" />

    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/sqvp_jiachangcai_id"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"

        android:layout_height="0dp"
        android:layout_weight="1" />



</LinearLayout>
