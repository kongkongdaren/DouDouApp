<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/common_white">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/hot_item_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/default_high"
        />
    <TextView
        android:id="@+id/tv_hot_item"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:drawableLeft="@mipmap/ico_video_small"
        android:text="@string/comment"/>
</FrameLayout>
    <TextView
        android:id="@+id/hot_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/common_black"
        android:layout_marginLeft="10dp"
        android:text="@string/cate"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/hot_item_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ico_weaken_good"
            android:text="@string/comment"/>
        <TextView
            android:id="@+id/hot_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ico_weaken_comment"
            android:layout_marginLeft="20dp"
            android:text="@string/comment"/>
    </LinearLayout>
</LinearLayout>