<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:background="@color/common_white"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <ImageView
            android:id="@+id/iv_coverUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/iv_coverUrl"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_Title"
                style="@style/shoppingTitle"
                android:textSize="16sp"

                />

            <TextView
                android:id="@+id/tv_subTitle"
                style="@style/shoppingTitle"
                android:textSize="14sp"
                />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_story_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="北京市昌平区回龙观-地铁站"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_creat_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="2015-12-09"/>

            <ImageView
                android:id="@+id/iv_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tv_like_count"
                android:background="@drawable/img_like_selector"/>

            <TextView
                android:id="@+id/tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="793"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@mipmap/discuss_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_comments_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_comments_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看全部"
                    />

                <TextView
                    android:id="@+id/tv_cmt_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/add_address"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条评论"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_deal_price"
            style="@style/scrollShopping"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_price"
            style="@style/Price"
            android:layout_toRightOf="@+id/tv_deal_price"
            />


        <TextView
            android:id="@+id/tv_labels_0"
            style="@style/openurl"
            android:layout_toRightOf="@+id/tv_price"
            android:alpha="0.8"
            android:background="@drawable/shape_point_item_price"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:layout_marginLeft="5dp"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/tv_labels_1"
            style="@style/openurl"
            android:layout_toRightOf="@+id/tv_labels_0"
            android:alpha="0.8"
            android:background="@drawable/shape_point_item_price"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:visibility="invisible"
            />
        <ImageButton
            android:id="@+id/btn_openurl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:src="@mipmap/btn_header_shoppingcart_gray"

            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/bright_gray"/>
</LinearLayout>