<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <ImageView
        android:id="@+id/iv_hot_rank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_main_logo"/>
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_gravity="right"
        android:textColor="@color/white"
        android:drawableLeft="@mipmap/ico_video_small"
        android:layout_marginTop="10dp"
        android:text="@string/rankcount"
        />
</FrameLayout>
    <TextView
        android:id="@+id/hot_rank_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:id="@+id/hot_rank_zan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/ico_weaken_good"
            android:text="@string/rankcount"
            android:gravity="center_vertical"
            android:textColor="@color/common_gray"
            />
        <TextView
            android:id="@+id/hot_rank_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/ico_weaken_comment"
            android:gravity="center_vertical"
            android:text="@string/rankcount"
            android:layout_marginLeft="30dp"
            android:textColor="@color/common_gray"
            />
    </LinearLayout>
</LinearLayout>