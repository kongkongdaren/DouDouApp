<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buy_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yjlw.ddms.homeentity.activity.BuyProductActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_product_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/common_white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:drawableTop="@mipmap/down_consultation"
            android:gravity="center"
            android:text="咨询"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/actionbar_bg_color"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:drawableTop="@mipmap/down_storefront"
            android:gravity="center"
            android:text="店铺"/>

        <TextView
            android:id="@+id/tv_add_shopping_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/vf5b230"
            android:gravity="center"
            android:text="加入购物车"
            android:clickable="true"
            android:onClick="addShoppingCard"
            android:textColor="@color/common_white"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/common_green"
            android:gravity="center"
            android:text="立即购买"
            android:clickable="true"
            android:onClick="buyProduct"
            android:textColor="@color/common_white"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>
