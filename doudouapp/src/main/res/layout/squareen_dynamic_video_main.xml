<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/iv_dynamic_image_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_main_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_dynamic_username_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好豆菜谱"/>
                <ImageView
                    android:id="@+id/iv_dynamic_vip_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/icon_vip_small"/>
                <ImageView
                    android:id="@+id/iv_dynamic_female_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ico_auxiliary_female"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/myhome_followed_normal"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_dynamic_result_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="百味来活动结果公布"/>
        <TextView
            android:id="@+id/tv_dynamic_content_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="“百味来世界意面总决赛”专业组优秀作品，正确答案是A,F,你猜对了吗？猜对"/>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="150dp">
            <io.vov.vitamio.widget.VideoView
                android:id="@+id/iv_dynamic_result_video_id"
                android:layout_width="200dp"
                android:layout_height="150dp" />
            <ImageView
                android:id="@+id/iv_dynamic_result_video_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_main_logo"
                />
            <ImageView
                android:id="@+id/video_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/btn_video_play_small" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_dynamic_date_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09-01 10:57"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:src="@mipmap/ico_auxiliary_zan_small"/>
            <TextView
                android:id="@+id/tv_dynamic_dianzan_count_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="73"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/ico_auxiliary_comment_number"/>
            <TextView
                android:id="@+id/tv_dynamic_pinlun_count_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="51"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/feedback_reply"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_dynamic_pinglun_username1_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于韩："/>
                <TextView
                    android:id="@+id/tv_dynamic_pinglun_content1_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="恭喜恭喜"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_dynamic_pinglun_username2_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于韩："/>
                <TextView
                    android:id="@+id/tv_dynamic_pinglun_content2_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="恭喜恭喜"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_dynamic_pinglun_count_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="查看全部27条评论"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
